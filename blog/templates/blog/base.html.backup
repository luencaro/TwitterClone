{% load static %}
<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="{% static 'blog/main.css' %}">
        <link rel="stylesheet" type="text/css" href="{% static 'blog/twitter-layout.css' %}">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="icon" type="image/png" href="{% static 'blog/logo.png' %}">
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.11.2/css/all.css" integrity="sha384-zrnmn8R8KkWl12rAZFt4yKjxplaDaT7/EUkKm7AovijfrQItFWR7O/JJn4DAa/gx" crossorigin="anonymous">
        <title>BlogRoom - Red Social</title>
    </head>
  <body>
    {% block body_content %}
    {% if user.is_authenticated %}
    <!-- Layout estilo Twitter -->
    <div class="twitter-layout">
        <!-- Sidebar izquierdo -->
        <aside class="sidebar-left">
            <div class="sidebar-brand mb-4">
                <i class="fas fa-dove fa-2x text-primary"></i>
            </div>
            <nav class="sidebar-nav">
                <a href="{% url 'blog-home' %}" class="sidebar-nav-item {% if request.resolver_match.url_name == 'blog-home' %}active{% endif %}">
                    <i class="fas fa-home"></i>
                    <span>Inicio</span>
                </a>
                <a href="{% url 'interests-list' %}" class="sidebar-nav-item {% if 'interests' in request.path %}active{% endif %}">
                    <i class="fas fa-hashtag"></i>
                    <span>Explorar</span>
                </a>
                <a href="{% url 'friends-list' %}" class="sidebar-nav-item {% if 'friends' in request.path or 'followers' in request.path or 'following' in request.path %}active{% endif %}">
                    <i class="fas fa-users"></i>
                    <span>Red Social</span>
                </a>
                <a href="{% url 'network-analytics' %}" class="sidebar-nav-item {% if 'analytics' in request.path %}active{% endif %}">
                    <i class="fas fa-chart-line"></i>
                    <span>Analíticas</span>
                </a>
                <a href="{% url 'user-posts' user.username %}" class="sidebar-nav-item">
                    <i class="fas fa-user"></i>
                    <span>Perfil</span>
                </a>
                <a href="{% url 'post-create' %}" class="btn btn-primary btn-block mt-3 rounded-pill">
                    <i class="fas fa-feather-alt"></i> Publicar
                </a>
            </nav>
            <div class="sidebar-user mt-auto">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="font-weight-bold">{{ user.username }}</div>
                        <small class="text-muted">@{{ user.username }}</small>
                    </div>
                    <a href="{% url 'logout' %}" class="text-muted" title="Cerrar sesión">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </aside>

        <!-- Contenido principal -->
        <main class="main-content">
            {% if messages %}
                {% for message in messages %}
                  <div class="alert alert-{{ message.tags|default:'info' }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                {% endfor %}
            {% endif %}
            {% block content %}{% endblock %}
        </main>

        <!-- Sidebar derecho -->
        <aside class="sidebar-right">
            {% block sidebar %}
            <!-- Sugerencias de amigos -->
            <div class="widget mb-4">
                <h5 class="widget-title">Personas que podrías conocer</h5>
                <div id="friend-suggestions">
                    <div class="text-center py-3">
                        <div class="spinner-border spinner-border-sm text-primary" role="status">
                            <span class="sr-only">Cargando...</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Trending topics -->
            <div class="widget mb-4">
                <h5 class="widget-title">Tendencias</h5>
                <div id="trending-topics">
                    <div class="text-center py-3">
                        <div class="spinner-border spinner-border-sm text-primary" role="status">
                            <span class="sr-only">Cargando...</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Influencers -->
            <div class="widget">
                <h5 class="widget-title">Usuarios influyentes</h5>
                <div id="influencers-list">
                    <div class="text-center py-3">
                        <div class="spinner-border spinner-border-sm text-primary" role="status">
                            <span class="sr-only">Cargando...</span>
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
        </aside>
    </div>
    {% else %}
    <!-- Layout para usuarios no autenticados -->
    <header class="site-header">
        <nav class="navbar navbar-expand navbar-dark bg-steel">
            <div class="container">
                <div class="collapse navbar-collapse" id="navbarToggle">
                    <div class="navbar-nav mr-auto pl-2">
                        <a class="nav-item nav-link" href="{% url 'blog-home' %}">Home</a>
                        <a class="nav-item nav-link" href="{% url 'blog-about' %}">About</a>
                    </div>
                    <div class="navbar-nav ml-auto pr-2 align-items-center">
                        <a class="nav-item nav-link" href="{% url 'login' %}">Login</a>
                        <a class="nav-item nav-link" href="{% url 'register-users' %}">Register</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="container-fluid">
        <br>
        <div class="row justify-content-center">
            <div class="col-12 col-xl-10 col-xxl-9">
                {% if messages %}
                    {% for message in messages %}
                      <div class="alert alert-{{ message.tags|default:'info' }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                    {% endfor %}
                {% endif %}
                {# Content block is in the authenticated section #}
            </div>
        </div>
    </main>
    {% endif %}
    {% endblock body_content %}

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="{% static 'blog/likes.js' %}"></script>
    <script src="{% static 'blog/card-navigation.js' %}"></script>
    <script src="{% static 'blog/social-widgets.js' %}"></script>
  </body>
</html>
