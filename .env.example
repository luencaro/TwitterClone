# Configuración de Neo4j
# Cambia estos valores con tus propias credenciales
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=tu_contraseña_aqui

# Django Secret Key
# Genera una nueva con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=tu_secret_key_aqui

# Django Debug (cambiar a False en producción)
DEBUG=True

# Hosts permitidos (separados por comas)
ALLOWED_HOSTS=localhost,127.0.0.1
